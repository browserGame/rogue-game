{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es2017",
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowUnreachableCode":true,
    /*outDir is overriden in the gulp file*/
    "outDir": "dist"
  }
}
